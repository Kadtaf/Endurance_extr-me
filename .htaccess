<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Autorise l'acc√®s direct aux fichiers existants
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirige tout vers index.html si le fichier n'existe pas
    RewriteRule ^ index.html [L]
</IfModule>
